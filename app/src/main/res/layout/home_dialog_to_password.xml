<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_dialog_back_data"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/mShowCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px10"
        android:paddingLeft="@dimen/px10"
        android:paddingRight="@dimen/px10"
        android:paddingBottom="@dimen/px5"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/px3"
        android:lineSpacingMultiplier="1.3"
        android:text="恭喜您，注册成为赵涌在线用户，默认初始密码为123456，"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/hunt_line_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/mOk"
            android:layout_width="@dimen/px0"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:padding="@dimen/px10"
            android:textColor="#007AFF"
            android:gravity="center"
            android:textSize="@dimen/sx16"
            android:text="确定"
            />
        <View
            android:layout_width="@dimen/px1"
            android:layout_height="match_parent"
            android:background="@color/hunt_line_color"
            />
        <TextView
            android:id="@+id/mCancel"
            android:layout_width="@dimen/px0"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:padding="@dimen/px10"
            android:textSize="@dimen/sx16"
            android:textColor="#007AFF"
            android:gravity="center"
            android:text="取消"
            />
    </LinearLayout>

</LinearLayout>
